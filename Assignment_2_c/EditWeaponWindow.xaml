<Window x:Class="Assignment_2_c.EditWeaponWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_2_c"
        mc:Ignorable="d"
        Title="Edit Weapon" Height="380" Width="300" WindowStartupLocation="CenterOwner"> 
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>

            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,40,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>

                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>


            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="Auto"/>

                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name" VerticalAlignment="Center" Margin="0,6"/>
            <TextBox Grid.Row="0" Grid.Column="1" Name="NameTextBox" Margin="0,4"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Type" VerticalAlignment="Center" Margin="0,6"/>
            <ComboBox Grid.Row="1" Grid.Column="1" Name="TypeComboBox" Margin="0,4"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Image URL" VerticalAlignment="Center" Margin="0,6"/>
            <TextBox Grid.Row="2" Grid.Column="1" Name="ImageUrlTextBox" TextChanged="ImageUrlTextBox_TextChanged" Margin="0,4"/>

            <Image Grid.Row="3" Grid.Column="1" Name="ImagePreview" Height="80" Stretch="Uniform" Margin="0,4"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Rarity" VerticalAlignment="Center" Margin="0,6"/>
            <ComboBox Grid.Row="4" Grid.Column="1" Name="RarityComboBox" Margin="0,4"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Base Attack" VerticalAlignment="Center" Margin="0,6"/>
            <TextBox Grid.Row="5" Grid.Column="1" Name="BaseAttackTextBox" Margin="0,4"/>

            <TextBlock Grid.Row="6" Grid.Column="0" Text="Secondary Stat" VerticalAlignment="Center" Margin="0,6"/>
            <TextBox Grid.Row="6" Grid.Column="1" Name="SecondaryStatTextBox" Margin="0,4"/>

            <TextBlock Grid.Row="7" Grid.Column="0" Text="Passive" VerticalAlignment="Center" Margin="0,6"/>
            <TextBox Grid.Row="7" Grid.Column="1" Name="PassiveTextBox" Margin="0,4"/>
        </Grid>

        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Name="GenerateButton" Click="GenerateClicked" Width="90" HorizontalAlignment="Left">Generate</Button>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="CancelButton" Click="CancelClicked" Width="80" Margin="0,0,8,0">Cancel</Button>
                <Button Name="SubmitButton" Click="SubmitClicked" Width="80">Save</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
