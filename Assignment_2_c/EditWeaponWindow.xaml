<Window x:Class="Assignment_2_c.EditWeaponWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_2_c"
        mc:Ignorable="d"
        Title="Edit Weapon" Height="450" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Name"/>
            <TextBox Name="NameTextBox" />

            <TextBlock Text="Type" Margin="0,6,0,0"/>
            <ComboBox Name="TypeComboBox"/>
            
            <Image Name="ImagePreview" Height="80" Stretch="Uniform" Margin="0,6,0,0"/>

            <TextBlock Text="Image URL" Margin="0,6,0,0"/>
            <TextBox Name="ImageUrlTextBox" TextChanged="ImageUrlTextBox_TextChanged"/>

            <WrapPanel Margin="0,6,0,0">
                <StackPanel Width="120">
                    <TextBlock Text="Rarity"/>
                    <ComboBox Name="RarityComboBox"/>
                </StackPanel>

                <StackPanel Margin="10,0,0,0" Width="200">
                    <TextBlock Text="Base Attack"/>
                    <TextBox Name="BaseAttackTextBox"/>
                </StackPanel>
            </WrapPanel>

            <TextBlock Text="Secondary Stat" Margin="0,6,0,0"/>
            <TextBox Name="SecondaryStatTextBox"/>

            <TextBlock Text="Passive" Margin="0,6,0,0"/>
            <TextBox Name="PassiveTextBox"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Name="GenerateButton" Click="GenerateClicked" Width="80" Margin="0,0,8,0">Generate</Button>
            <Button Name="CancelButton" Click="CancelClicked" Width="80" Margin="0,0,8,0">Cancel</Button>
            <Button Name="SubmitButton" Click="SubmitClicked" Width="80">Save</Button>
        </StackPanel>
    </Grid>
</Window>
