<Window x:Class="Assignment_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_3"
        mc:Ignorable="d"
        Title="Sprite Sheet Generator" Width="820" Height="500" MinWidth="700" MinHeight="420"
        WindowStartupLocation="CenterScreen">
    <DockPanel LastChildFill="True" Margin="8">

        <StackPanel DockPanel.Dock="Top" Orientation="Vertical" HorizontalAlignment="Left" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Menu VerticalAlignment="Center" FontSize="18" Margin="0,0,12,0">
                    <MenuItem Header="_File" Width="60" Height="30">
                        <MenuItem Header="_New" Click="FileNew_Click" />
                        <MenuItem Header="_Open..." Click="FileOpen_Click" />
                        <Separator/>
                        <MenuItem Header="_Save" Name="MenuSave" Click="FileSave_Click" IsEnabled="False"/>
                        <MenuItem Header="Save _As..." Click="FileSaveAs_Click" />
                        <Separator/>
                        <MenuItem Header="E_xit" Click="FileExit_Click" />
                    </MenuItem>
                </Menu>

                <Menu VerticalAlignment="Center" FontSize="18">
                    <MenuItem Header="_Edit" Width="60" Height="30">
                        <MenuItem Header="_Undo" Click="EditUndo_Click" InputGestureText="Ctrl+Z"/>
                        <MenuItem Header="_Redo" Click="EditRedo_Click" InputGestureText="Ctrl+Y"/>
                        <Separator/>
                        <MenuItem Header="_Copy" Click="EditCopy_Click" InputGestureText="Ctrl+C"/>
                        <MenuItem Header="_Paste" Click="EditPaste_Click" InputGestureText="Ctrl+V"/>
                        <Separator/>
                        <MenuItem Header="_Remove" Click="EditRemove_Click" InputGestureText="Del"/>
                        <MenuItem Header="Remove _All" Click="EditRemoveAll_Click" InputGestureText="Ctrl+Shift+Del"/>
                    </MenuItem>
                </Menu>
            </StackPanel>

            <TextBlock Text="SpriteSheet.xaml" FontWeight="Bold" FontSize="16" Margin="0,6,0,0"/>
        </StackPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,12,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="160"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Output Directory" VerticalAlignment="Center" Margin="0,6,6,0"/>
                <TextBox Grid.Column="1" Name="tbOutputDir" Height="34" VerticalAlignment="Center" Grid.ColumnSpan="2"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="File Name (.png)" VerticalAlignment="Center" Margin="0,6,6,0"/>
                <TextBox Grid.Row="2" Grid.Column="1" Name="tbOutputFile" Height="34" VerticalAlignment="Center" Grid.ColumnSpan="2"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Columns" VerticalAlignment="Center" Margin="0,6,6,0"/>
                <TextBox Grid.Row="4" Grid.Column="1" Name="tbColumns" Height="34" VerticalAlignment="Center" Margin="0,0,81,0"/>

                <CheckBox Grid.Row="4" Grid.Column="1" Name="chkIncludeMeta" IsChecked="True" VerticalAlignment="Center" Margin="300,0,0,0" Grid.ColumnSpan="2">Include Meta Data (.json)</CheckBox>
            </Grid>

            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Button Name="btnBrowse" Click="BrowseOutput_Click" Width="110" Height="34">Browse...</Button>
            </StackPanel>

            <ListBox Grid.Row="2" Grid.Column="0" Name="ImagesListBox"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Disabled"
                     SelectionMode="Single" Margin="0,40,0,28" Grid.RowSpan="2">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" IsItemsHost="True"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD" BorderThickness="1" Margin="6" Width="160">
                            <StackPanel Margin="6" HorizontalAlignment="Center">
                                <Image Source="{Binding}" Height="90" Stretch="Uniform"/>
                                <TextBlock Text="{Binding}" TextWrapping="Wrap" FontSize="11" Margin="0,6,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="2" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,0,6">
                <Button Name="btnAdd" Click="Add_Click" Width="110" Height="34" Margin="0,0,0,8">Add</Button>
                <Button Name="btnRemove" Click="Remove_Click" Width="110" Height="34" Margin="0,0,0,8">Remove</Button>
                <Button Name="btnGenerate" Click="Generate_Click" Width="110" Height="34">Generate</Button>
            </StackPanel>

            <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="160"/>
                </Grid.ColumnDefinitions>

                <ProgressBar Name="progressBar" Grid.Column="0" Height="6" Minimum="0" Maximum="100" VerticalAlignment="Center" Grid.ColumnSpan="2" />
                <TextBlock Name="statusText" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
