<Window x:Class="Assignment_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_3"
        mc:Ignorable="d"
        Title="Sprite Sheet Generator" Height="600" Width="900" MinWidth="700" MinHeight="450">
    <DockPanel>

        <!-- Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Click="FileNew_Click" />
                <MenuItem Header="_Open..." Click="FileOpen_Click" />
                <Separator />
                <MenuItem Header="_Save" Name="MenuSave" Click="FileSave_Click" IsEnabled="False"/>
                <MenuItem Header="Save _As..." Click="FileSaveAs_Click" />
                <Separator />
                <MenuItem Header="E_xit" Click="FileExit_Click" />
            </MenuItem>

            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Click="EditUndo_Click" InputGestureText="Ctrl+Z"/>
                <MenuItem Header="_Redo" Click="EditRedo_Click" InputGestureText="Ctrl+Y"/>
                <Separator/>
                <MenuItem Header="_Copy" Click="EditCopy_Click" InputGestureText="Ctrl+C"/>
                <MenuItem Header="_Paste" Click="EditPaste_Click" InputGestureText="Ctrl+V"/>
                <Separator/>
                <MenuItem Header="_Remove" Click="EditRemove_Click" InputGestureText="Del"/>
                <MenuItem Header="Remove _All" Click="EditRemoveAll_Click" InputGestureText="Ctrl+Shift+Del"/>
            </MenuItem>
        </Menu>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Project name / header -->
                <RowDefinition Height="Auto"/>
                <!-- Labels / inputs -->
                <RowDefinition Height="*"/>
                <!-- Listbox + buttons -->
                <RowDefinition Height="Auto"/>
                <!-- footer (metadata + progress) -->
            </Grid.RowDefinitions>

            <!-- Project info text -->
            <TextBlock Grid.Row="0" Text="SpriteSheetGenerator.xml" FontWeight="Bold" Margin="0,0,0,8"/>

            <!-- Two-column layout: labels left, controls right -->
            <Grid Grid.Row="1" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Output Directory -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Output Directory" VerticalAlignment="Center" Margin="0,4"/>
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                    <TextBox Name="tbOutputDir" Width="420" Margin="0,0,8,0" />
                    <Button Name="btnBrowse" Click="BrowseOutput_Click" Width="80">Browse...</Button>
                </StackPanel>

                <!-- Filename -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Filename (.png)" VerticalAlignment="Center" Margin="0,4"/>
                <TextBox Grid.Row="1" Grid.Column="1" Name="tbOutputFile" Width="320" Margin="0,4"/>

                <!-- Columns -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Columns" VerticalAlignment="Center" Margin="0,4"/>
                <TextBox Grid.Row="2" Grid.Column="1" Name="tbColumns" Width="80" Margin="0,4"/>
            </Grid>

            <!-- ListBox and control buttons -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="140"/>
                </Grid.ColumnDefinitions>

                <!-- Horizontal ListBox of images -->
                <ListBox Name="ImagesListBox"
                         Grid.Column="0"
                         Height="320"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled"
                         SelectionMode="Single">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" IsItemsHost="True"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#DDD" BorderThickness="1" Margin="4">
                                <StackPanel Width="140" Margin="4">
                                    <Image Source="{Binding}" Height="80" Stretch="Uniform" />
                                    <TextBlock Text="{Binding}" TextWrapping="Wrap" FontSize="10" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Right side buttons -->
                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                    <Button Name="btnAdd" Click="Add_Click" Height="30" Margin="0,0,0,8">Add</Button>
                    <Button Name="btnRemove" Click="Remove_Click" Height="30" Margin="0,0,0,8">Remove</Button>
                    <Button Name="btnGenerate" Click="Generate_Click" Height="30" Margin="0,8,0,0">Generate</Button>
                </StackPanel>
            </Grid>

            <!-- Footer: metadata checkbox + progress + status -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,8,0,0" HorizontalAlignment="Left">
                <CheckBox Name="chkIncludeMeta" IsChecked="True" Margin="0,0,12,0">Save metadata (.json)</CheckBox>
                <ProgressBar Name="progressBar" Width="300" Height="18" Minimum="0" Maximum="100" Margin="0,0,12,0"/>
                <TextBlock Name="statusText" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
